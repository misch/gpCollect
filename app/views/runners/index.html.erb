<p id="notice"><%= notice %></p>

<h1>Listing Runners</h1>
<div class="row">
  <div class="col-lg-9">
    <table class="table table-hover" id="runners-datatable" data-source="<%= runners_path(format: :json) %>">
      <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Club or hometown</th>
        <th>Sex</th>
        <th>Nationality</th>
        <th>Participations</th>
        <th>Best time</th>
        <th></th>
      </tr>
      </thead>

      <tbody>
      </tbody>
    </table>
  </div>
  <div class="col-lg-3">
    <%= panel heading: 'Remembered runners', context: :info, id: 'remembered-runners-panel' do %>
        <div class='panel-body'></div>
    <% end %>
  </div>
</div>