<p id="notice"><%= notice %></p>

<h1>Listing Runners</h1>
<%= paginate @runners, :theme => 'twitter-bootstrap-3' %>
<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Birth date</th>
      <th>Sex</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runners.each do |runner| %>
      <tr>
        <td><%= runner.first_name %></td>
        <td><%= runner.last_name %></td>
        <td><%= runner.birth_date %></td>
        <td><%= runner.sex %></td>
        <td><%= link_to 'Show', runner %></td>
        <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
        <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @runners, :theme => 'twitter-bootstrap-3' %>
<br>

<%= link_to 'New Runner', new_runner_path %>
