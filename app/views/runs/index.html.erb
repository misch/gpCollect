<p id="notice"><%= notice %></p>

<h1>Listing Runs</h1>

<table>
  <thead>
    <tr>
      <th>Start</th>
      <th>Duration</th>
      <th>Runner</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @runs.each do |run| %>
      <tr>
        <td><%= run.start %></td>
        <td><%= run.duration %></td>
        <td> <%= run.runner.first_name %> <%= run.runner.last_name %></td>
        <td> <%= run.category.sex %> <%= run.category.age_min%> - <%= run.category.age_max%></td>
        <td><%= link_to 'Show', run %></td>
        <td><%= link_to 'Edit', edit_run_path(run) %></td>
        <td><%= link_to 'Destroy', run, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

